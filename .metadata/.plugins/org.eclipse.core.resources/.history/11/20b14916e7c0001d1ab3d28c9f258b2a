package Ejercicio8;

import java.util.Scanner;

public class Menu {
	public static void main(String[] args) {
		try(Scanner teclado = new Scanner(System.in)){
			
			//Plato 1
			Plato plato1 = new Plato();
			
			System.out.println("Primer plato");
			
			System.out.print("Nombre plato: ");
			String nombrePlato = teclado.next();
			plato1.setNombre(nombrePlato);
			
			System.out.print("Nombre categoria: ");
			String nombreCategoria = teclado.next();
			plato1.setCategoria(nombreCategoria);
			
			//Plato 2
			Plato plato2 = new Plato();
			
			System.out.println("Segundo plato");
			
			System.out.print("Nombre plato: ");
			nombrePlato = teclado.next();
			plato2.setNombre(nombrePlato);
			
			System.out.print("Nombre categoria: ");
			nombreCategoria = teclado.next();
			plato2.setCategoria(nombreCategoria);
			
			//Plato 2
			Plato bebida = new Plato();
			
			System.out.println("Bebida");
			
			System.out.print("Nombre bebida: ");
			nombrePlato = teclado.next();
			bebida.setNombre(nombrePlato);
			
			System.out.print("Nombre categoria: ");
			nombreCategoria = teclado.next();
			bebida.setCategoria(nombreCategoria);
			
			//Mostramos menu completo
			System.out.println("1 Plato | " + plato1.getNombre() + " " + plato1.getCategoria());
			System.out.println("2 Plato | " + plato2.getNombre() + " " + plato2.getCategoria());
			System.out.println("Bebida | " + bebida.getNombre() + " " + plato1.getCategoria());
			
		}
	}
}
