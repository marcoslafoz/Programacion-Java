package Ejercicio2;

import java.util.Random;

public class Main {
	public static void main(String[] args) {
	
	//Creamos el objeto random
	Random rand = new Random();
	
	//Creamos los vectores
	int[] vector1 = new int[20];
	int[] vector2 = new int[20];
	int[] vector3 = new int[20];
	
	//Asignamos un numero aleatorio a cada dimension del vector 1 y vector 2
	for(int i = 0 ; i < 20 ; i++) {
		vector1[i] = rand.nextInt(11);
		vector2[i] = rand.nextInt(11);
		vector3[i] = vector1[i] + vector2[i]; //Sumamos las dimensiones del vector1 y vector2 en el vector3
		
		System.out.print("[" + i +"] => " + vector1 + " ");
		}
	
	
	
	
	
	}
}
